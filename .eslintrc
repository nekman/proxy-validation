{
  "extends": "airbnb-base",
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "."
        ]
      }
    }
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "function-paren-newline": 0,
    "object-curly-newline": 1,
    "comma-dangle": 0,
    "no-console": 1,
    "new-cap": 0,
    "no-multi-spaces": 0,
    "consistent-return": 2,
    "arrow-body-style": 0,
    "no-param-reassign": [2, { "props": false }],
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": [0, { "devDependencies": true }],
    "import/no-unresolved": 0,
    "no-restricted-syntax": 0,
    "no-multi-assign": 0,
    "no-plusplus": 1,
    "class-methods-use-this": 0,
    "arrow-parens": 0,
    "camelcase": 0,
    "padded-blocks": 0,
    "no-return-assign": 0
  }
}